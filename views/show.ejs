<% include partials/header %>
    <!-- Main -->
    <div id="main-wrapper">
        <div class="container">

            <!-- Content -->
            <article class="box post">
                <a href="<%= parking._id %>" class="image featured">
                    <img src = " <%= parking.image %> "/>
                </a>
                <header> 
                    <h2><%= parking.name %></h2>
                    <p><%= parking.land %></p>
                    <p></p>
                    <h3>
                        <i class="fa fa-product-hunt" aria-hidden="true"></i> จำนวนที่จอดที่เหลือตอนนี้:
                        <strong style="color:red"><%= parking.nowPark %></strong> /
                        <%= parking.maxPark %>
                    </h3>
                </header>
                <p><%= parking.description %></p>
                <section>
                    <header>
                        <h3>
                            <i class="fa fa-info-circle" aria-hidden="true"></i> Info</h3>
                    </header>
                    <p>
                        <strong>ชื่ออาคาร: </strong><%= parking.nameb %>
                        <strong>ความสูง(ชั้น): </strong><%= parking.high %>
                        <strong>พื้นที่อาคาร: </strong><%= parking.area %></p>
                    <p><strong>สถานที่ติดต่อ: </strong><%= parking.contact %></p>
                    <p><strong>โทรศัพท์: </strong><%= parking.phone %></p>

                </section>
                <section>
                    <header>
                        <h3>MAP
                            <i class="fa fa-map-marker" aria-hidden="true"></i>
                        </h3>
                    </header>

                    <h3>Google Maps
                        <i class="fa fa-google" aria-hidden="true"></i>
                    </h3>
                    <div class="8u 12u(mobile)">
                        <iframe src="<%= parking.map %>"
                            width="100%" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
                        <p></p>
                    </div>

                    <a href="<%= parking.direct %>"
                        class="button">Get Direct</a>


                </section>
            </article>

        </div>
    </div>

<% include partials/footer %>